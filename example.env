# Django配置
DEBUG=True
SECRET_KEY=your-secret-key-here

# 数据库配置
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=3306

# AI服务配置
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=your-openai-api-key-here

# Ollama 详细配置
# API版本
OLLAMA_API_VERSION=v1

# 超时配置（秒）
# 连接超时
OLLAMA_CONNECTION_TIMEOUT=5
# 请求超时（AI推理需要更长时间）
OLLAMA_REQUEST_TIMEOUT=120
# 模型拉取超时（5分钟）
OLLAMA_MODEL_PULL_TIMEOUT=300

# 默认模型配置
# 默认聊天模型
OLLAMA_DEFAULT_CHAT_MODEL=llama3.1:8b
# 代码审查模型
OLLAMA_CODE_REVIEW_MODEL=llama3.1:8b
# 提交分析模型
OLLAMA_COMMIT_ANALYSIS_MODEL=llama3.1:8b

# 请求重试配置
# 最大重试次数
OLLAMA_MAX_RETRIES=3
# 重试延迟（秒）
OLLAMA_RETRY_DELAY=2.0
# 重试延迟倍数
OLLAMA_RETRY_BACKOFF=2.0

# 模型管理配置
# 是否自动拉取缺失的模型
OLLAMA_AUTO_PULL=false
# 是否启用模型缓存
OLLAMA_CACHE_ENABLED=true

# 内容限制配置
# 最大提示长度（字符）
OLLAMA_MAX_PROMPT_LENGTH=32000
# 代码审查最大长度（字符）
OLLAMA_MAX_CODE_LENGTH=20000
# 提交分析最大文件数
OLLAMA_MAX_COMMIT_FILES=10

# 性能配置
# 是否启用流式响应
OLLAMA_ENABLE_STREAMING=false
# 并发请求数
OLLAMA_CONCURRENT_REQUESTS=2

# 调试配置
# 调试模式
OLLAMA_DEBUG=false
# 记录请求日志
OLLAMA_LOG_REQUESTS=false
# 详细错误信息
OLLAMA_VERBOSE_ERRORS=false

# 健康检查配置
# 健康检查间隔（秒）
OLLAMA_HEALTH_CHECK_INTERVAL=300
# 是否启用健康检查
OLLAMA_HEALTH_CHECK_ENABLED=true

# GitHub配置
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here
GITHUB_TOKEN=your-github-personal-access-token

# 其他配置
ALLOWED_HOSTS=localhost,127.0.0.1

# 开发环境配置
DEVELOPMENT=True
LOG_LEVEL=DEBUG


# GitHub API 配置
# 仓库所有者（用户名或组织名）
REPO_OWNER=your-repo-owner-name
# 仓库名称
REPO_NAME=your-repo-name

# GitHub API 请求限制配置
# 单次请求最大提交数（1-100）
GITHUB_MAX_COMMITS=10
# 单个提交最大文件数
GITHUB_MAX_FILES=50
# 最大PR数量
GITHUB_MAX_PRS=20
# 搜索结果最大数量
GITHUB_MAX_SEARCH=30

# GitHub API 时间间隔配置（秒）
# 最小请求间隔
GITHUB_MIN_INTERVAL=1.0
# GET请求间隔（推荐2.0以上避免频率限制）
GITHUB_GET_INTERVAL=2.0
# webhook触发延迟
GITHUB_WEBHOOK_DELAY=1.0
# 请求超时时间
GITHUB_TIMEOUT=30

# GitHub 时间限制配置
# 最大提交年龄（天）- 只获取这个时间内的提交
GITHUB_MAX_COMMIT_AGE=30
# 数据保留时间（天）- 超过此时间的数据会被清理
GITHUB_DATA_RETENTION=90
# 缓存清理间隔（秒）
GITHUB_CACHE_CLEANUP=3600

# GitHub 缓存配置
# 是否启用缓存
GITHUB_ENABLE_CACHE=true
# 缓存生存时间（秒）
GITHUB_CACHE_TTL=300

# GitHub 重试配置
# 最大重试次数
GITHUB_MAX_RETRIES=3
# 重试延迟（秒）
GITHUB_RETRY_DELAY=2.0

# GitHub 请求频率控制
# 每日请求限制
GITHUB_DAILY_LIMIT=1000
# 每小时请求限制（建议设置为每日限制/24以下，避免过早达到每日限制）
GITHUB_HOURLY_LIMIT=40
# 突发请求限制
GITHUB_BURST_LIMIT=20
# 冷却期（秒）
GITHUB_COOLDOWN=300

# GitHub 内容过滤配置
# 是否包含合并提交
GITHUB_INCLUDE_MERGES=true
# 是否包含机器人提交
GITHUB_INCLUDE_BOTS=false
# 提交消息最大长度
GITHUB_MAX_MESSAGE_LEN=200
# 文件补丁最大大小（字符）
GITHUB_MAX_PATCH_SIZE=10000

# GitHub 分支配置
# 默认分支
GITHUB_DEFAULT_BRANCH=main

# GitHub 调试配置
# 调试模式
GITHUB_DEBUG=false
# 记录API调用
GITHUB_LOG_API=false
# 详细错误信息
GITHUB_VERBOSE_ERRORS=false

# GitHub 速率限制配置
# 每小时请求数（认证用户默认5000）
GITHUB_RATE_HOUR=5000
# 每分钟请求数
GITHUB_RATE_MINUTE=100
# 搜索API每分钟请求数
GITHUB_SEARCH_RATE=30
# 并发请求数
GITHUB_CONCURRENT=3
# 自适应延迟
GITHUB_ADAPTIVE_DELAY=true
# 触发限制时退避
GITHUB_BACKOFF=true
# 遵守Retry-After头
GITHUB_RESPECT_RETRY=true