# Django配置
DEBUG=True
SECRET_KEY=your-secret-key-here

# 数据库配置
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=3306

# AI服务配置
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=your-openai-api-key-here

# GitHub配置
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here
GITHUB_TOKEN=your-github-personal-access-token

# 其他配置
ALLOWED_HOSTS=localhost,127.0.0.1

# 开发环境配置
DEVELOPMENT=True
LOG_LEVEL=DEBUG


# GitHub API 配置
# 仓库所有者（用户名或组织名）
REPO_OWNER=your-repo-owner-name
# 仓库名称
REPO_NAME=your-repo-name

# GitHub API 请求限制配置
# 单次请求最大提交数（1-100）
GITHUB_MAX_COMMITS=10
# 单个提交最大文件数
GITHUB_MAX_FILES=50
# 最大PR数量
GITHUB_MAX_PRS=20
# 搜索结果最大数量
GITHUB_MAX_SEARCH=30

# GitHub API 时间间隔配置（秒）
# 最小请求间隔
GITHUB_MIN_INTERVAL=1.0
# GET请求间隔（推荐2.0以上避免频率限制）
GITHUB_GET_INTERVAL=2.0
# webhook触发延迟
GITHUB_WEBHOOK_DELAY=1.0
# 请求超时时间
GITHUB_TIMEOUT=30

# GitHub 时间限制配置
# 最大提交年龄（天）- 只获取这个时间内的提交
GITHUB_MAX_COMMIT_AGE=30
# 数据保留时间（天）- 超过此时间的数据会被清理
GITHUB_DATA_RETENTION=90
# 缓存清理间隔（秒）
GITHUB_CACHE_CLEANUP=3600

# GitHub 缓存配置
# 是否启用缓存
GITHUB_ENABLE_CACHE=true
# 缓存生存时间（秒）
GITHUB_CACHE_TTL=300

# GitHub 重试配置
# 最大重试次数
GITHUB_MAX_RETRIES=3
# 重试延迟（秒）
GITHUB_RETRY_DELAY=2.0

# GitHub 请求频率控制
# 每日请求限制
GITHUB_DAILY_LIMIT=1000
# 每小时请求限制
GITHUB_HOURLY_LIMIT=100
# 突发请求限制
GITHUB_BURST_LIMIT=20
# 冷却期（秒）
GITHUB_COOLDOWN=300

# GitHub 内容过滤配置
# 是否包含合并提交
GITHUB_INCLUDE_MERGES=true
# 是否包含机器人提交
GITHUB_INCLUDE_BOTS=false
# 提交消息最大长度
GITHUB_MAX_MESSAGE_LEN=200
# 文件补丁最大大小（字符）
GITHUB_MAX_PATCH_SIZE=10000

# GitHub 分支配置
# 默认分支
GITHUB_DEFAULT_BRANCH=main

# GitHub 调试配置
# 调试模式
GITHUB_DEBUG=false
# 记录API调用
GITHUB_LOG_API=false
# 详细错误信息
GITHUB_VERBOSE_ERRORS=false

# GitHub 速率限制配置
# 每小时请求数（认证用户默认5000）
GITHUB_RATE_HOUR=5000
# 每分钟请求数
GITHUB_RATE_MINUTE=100
# 搜索API每分钟请求数
GITHUB_SEARCH_RATE=30
# 并发请求数
GITHUB_CONCURRENT=3
# 自适应延迟
GITHUB_ADAPTIVE_DELAY=true
# 触发限制时退避
GITHUB_BACKOFF=true
# 遵守Retry-After头
GITHUB_RESPECT_RETRY=true